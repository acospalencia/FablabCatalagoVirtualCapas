@using FablabCatalagoVirtualCapasEN
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="icon" type="image/x-icon" href="~/favicon.ico" />
	<title>@ViewBag.Title - FabLab/ESFE</title>
	<link href="~/Content/MainStyle.css" rel="stylesheet" />
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="/Home">FabLab/ESFE</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavDropdown">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="/Home">Inicio</a>
					</li>

					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Catalogo de Prototipos
						</a>
						<ul class="dropdown-menu">
							<li><a class="dropdown-item" href="/Prototipos/PTecnologicos">Prototipos de proyectos tecnologicos</a></li>
							<li><a class="dropdown-item" href="/Prototipos/Testing">Prototipos de testing</a></li>
							<li><a class="dropdown-item" href="/Prototipos/PLPIT">Prototipos del programa LPIT</a></li>
						</ul>
					</li>
					
					@if (Session["Autor"] == null)
					{

						<li class="nav-item">
							<a class="nav-link" href="/Autores/InciarSesion">Inciar Sesion</a>
						</li>
					}
					else
					{
						var autor = Session["Autor"] as Autores;

						<li class="nav-item dropdown ">
							<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Autor: @autor.Nombres
							</a>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" href="/Autores/Details/@autor.Id">Mi informacion</a></li>
								<li><a class="dropdown-item" href="#">Iniciar una Solicitud de Proyecto</a></li>
								<li><a class="dropdown-item" href="/Home/CerrarSesion">Cerrar Sesion</a></li>
							</ul>
						</li>
					}


				</ul>
			</div>
		</div>
	</nav>

	<div class="container body-content ">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Catalogo Virtual de Prototipos</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/Scripts/MainScript.js"></script>
</body>
</html>
