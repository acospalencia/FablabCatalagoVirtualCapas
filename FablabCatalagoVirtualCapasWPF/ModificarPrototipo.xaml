        <ComboBox x:Name="cbMaterial" HorizontalAlignment="Left" Margin="50,179,0,0" Text="" VerticalAlignment="Top" Width="178" Foreground="Black" FontWeight="Bold" FontFamily="Arial" FontSize="14"/>

    </Grid>
</Window>
