<Controls:MetroWindow x:Class="Fablab.esfe.PantallaPrincipal"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fablab.esfe"
        mc:Ignorable="d"
        Title="Pantalla Principal" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Left" Height="434">
        <Grid.Background>
            <ImageBrush ImageSource="/Recursos/Fondos/Fondo5.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Left" Height="434" Margin="369,0,0,0" VerticalAlignment="Center" Width="426" Fill="White"/>
        <Label Content="Bienvenido al catalogo  digital de &#xD;&#xA;    prototipos de FabLab ESFE." HorizontalAlignment="Center" Margin="391,10,0,0" VerticalAlignment="Top" FontSize="24" Background="{x:Null}" Foreground="#FF1A3E86" BorderBrush="#FFE4D4D4" Height="69" FontFamily="Arial" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btnListado" Cursor="Hand" Content="Ver listado de prototipos" HorizontalAlignment="Left" Margin="450,0,0,0" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"  Height="38" Width="264" Background="#FFBE43BF" FontFamily="Arial" Click="btnListado_Click"/>
        <Image HorizontalAlignment="Left" Height="140" Margin="116,204,0,0" VerticalAlignment="Top" Width="155" Source="/Recursos/Fondos/LogoFablab.png"/>
        <Button x:Name="BtnAdministrar" Cursor="Hand" Content="Administrar Catalogo" HorizontalAlignment="Left" Margin="450,274,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"  Height="39" Width="264" Background="#FFBE43BF" FontFamily="Arial" Click="BtnAdministrar_Click"/>

    </Grid>
</Controls:MetroWindow>
